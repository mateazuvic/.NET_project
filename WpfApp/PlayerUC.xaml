<UserControl x:Class="WpfApp.PlayerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontWeight="Bold" FontSize="20">
    <Viewbox Stretch="Fill">
        <Grid MouseUp="Grid_MouseUp">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image x:Name="imgPlayer" Grid.Column="0" Grid.Row="0" Width="190"  Height="200" Source="Resources/football-player-1426973-1208513.png" Margin="50,0,50,0"/>
            <Label x:Name="lblName" Grid.Column="0" Grid.Row="1" Height="40" Content="" Margin="20,20,20,20" HorizontalContentAlignment="Center"></Label>
            <Label x:Name="lblShirtNbr" Grid.Column="0" Grid.Row="2" Height="80" Content="" Margin="70,20,60,20" FontSize="28" HorizontalContentAlignment="Center"></Label>

        </Grid>
    </Viewbox>
</UserControl>
